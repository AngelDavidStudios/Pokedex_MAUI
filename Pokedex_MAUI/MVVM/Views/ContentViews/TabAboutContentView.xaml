<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pokedex_MAUI.MVVM.Views.ContentViews.TabAboutContentView"
             xmlns:converters="clr-namespace:Pokedex_MAUI.Converters"
             xmlns:pancake="clr-namespace:PancakeView;assembly=PancakeView"
             xmlns:skeleton="clr-namespace:Maui.Skeleton;assembly=Maui.Skeleton"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <ContentView.Resources>
        <converters:ConverterTypeToColorType x:Key="converterTypeToColorType" />
        <converters:ConverterTypeToImageType x:Key="converterTypeToImageType" />

        <Style
            x:Key="cardSkeletonAbout"
            BasedOn="{StaticResource CardSkeleton}"
            TargetType="{x:Type pancake:PancakeView}">
            <Setter Property="skeleton:Skeleton.IsBusy" Value="{Binding PokemonSpecies.IsBusy}" />
        </Style>
    </ContentView.Resources>

    <ContentView.Content>
        <StackLayout VerticalOptions="FillAndExpand">
            <Grid Padding="40,30,40,10" RowSpacing="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <pancake:PancakeView Style="{StaticResource cardSkeletonAbout}">
                    <Label
                        HorizontalOptions="Start"
                        Style="{StaticResource LabelDescription}"
                        Text="{Binding PokemonSpecies.FlavorText}"
                        TextColor="{StaticResource ColorTextGray}"
                        VerticalOptions="Start" />
                </pancake:PancakeView>


                <!--  Seccion datos Pokedex  -->
                <pancake:PancakeView
                    Grid.Row="1"
                    HorizontalOptions="Start"
                    Style="{StaticResource cardSkeletonAbout}"
                    WidthRequest="120">
                    <Label
                        HorizontalOptions="Start"
                        Style="{StaticResource LabelFilterTitle}"
                        Text="Pokédex Data"
                        TextColor="{Binding Pokemon.TypeDefault, Converter={StaticResource converterTypeToColorType}}" />
                </pancake:PancakeView>

                <Grid
                    Grid.Row="2"
                    ColumnSpacing="10"
                    RowSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2.5*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="35" />
                    </Grid.RowDefinitions>

                    <pancake:PancakeView Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelPokemonType}"
                            Text="Especies"
                            TextColor="{StaticResource ColorTextBlack}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>
                    <pancake:PancakeView Grid.Row="1" Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelPokemonType}"
                            Text="Altura"
                            TextColor="{StaticResource ColorTextBlack}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>
                    <pancake:PancakeView Grid.Row="2" Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelPokemonType}"
                            Text="Peso"
                            TextColor="{StaticResource ColorTextBlack}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>
                    <pancake:PancakeView Grid.Row="3" Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelPokemonType}"
                            Text="Habilidades"
                            TextColor="{StaticResource ColorTextBlack}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>
                    <pancake:PancakeView Grid.Row="4" Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelPokemonType}"
                            Text="Debilidades"
                            TextColor="{StaticResource ColorTextBlack}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>

                    <pancake:PancakeView Grid.Column="1" Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelDescription}"
                            Text="{Binding PokemonSpecies.GenusDescription}"
                            TextColor="{StaticResource ColorTextGray}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>
                    <pancake:PancakeView
                        Grid.Row="1"
                        Grid.Column="1"
                        Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            TextColor="{StaticResource ColorTextGray}"
                            VerticalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Style="{StaticResource LabelDescription}"
                                          Text="{Binding Pokemon.Meters, StringFormat='{0:N1}m'}" />
                                    <Span Text=" " />
                                    <Span Style="{StaticResource LabelPokemonType}" Text="{Binding Pokemon.Inches}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </pancake:PancakeView>
                    <pancake:PancakeView
                        Grid.Row="2"
                        Grid.Column="1"
                        Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            TextColor="{StaticResource ColorTextGray}"
                            VerticalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Style="{StaticResource LabelDescription}"
                                          Text="{Binding Pokemon.Kilograms, StringFormat='{0:N1}kg'}" />
                                    <Span Text=" " />
                                    <Span Style="{StaticResource LabelPokemonType}"
                                          Text="{Binding Pokemon.Pounds, StringFormat='({0:N1} lbs)'}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </pancake:PancakeView>

                    <StackLayout
                        Grid.Row="3"
                        Grid.Column="1"
                        BindableLayout.ItemsSource="{Binding Pokemon.Abilities}"
                        HorizontalOptions="StartAndExpand"
                        Orientation="Vertical"
                        VerticalOptions="CenterAndExpand">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <pancake:PancakeView skeleton:Skeleton.IsBusy="{Binding IsBusy}"
                                                     Style="{StaticResource CardSkeleton}">
                                    <Label
                                        HorizontalOptions="Start"
                                        Style="{StaticResource LabelDescription}"
                                        Text="{Binding Ability.NameFirstCharUpper}"
                                        TextColor="{StaticResource ColorTextGray}"
                                        VerticalOptions="Center">
                                        <Label.Triggers>
                                            <DataTrigger
                                                Binding="{Binding IsHidden}"
                                                TargetType="Label"
                                                Value="True">
                                                <Setter Property="Style" Value="{StaticResource LabelPokemonType}" />
                                                <Setter Property="Text"
                                                        Value="{Binding Ability.NameFirstCharUpper, StringFormat='{0} (hidden ability)'}" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                </pancake:PancakeView>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </StackLayout>

                    <CollectionView
                        Grid.Row="4"
                        Grid.Column="1"
                        HorizontalOptions="FillAndExpand"
                        ItemsSource="{Binding Pokemon.Weaknesses}"
                        VerticalOptions="CenterAndExpand">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <pancake:PancakeView
                                    skeleton:Skeleton.IsBusy="{Binding IsBusy}"
                                    HorizontalOptions="Start"
                                    Style="{StaticResource CardSkeleton}"
                                    VerticalOptions="Start">
                                    <pancake:PancakeView
                                        Padding="5"
                                        BackgroundColor="{Binding Type, Converter={StaticResource converterTypeToColorType}}"
                                        CornerRadius="3"
                                        HeightRequest="25"
                                        WidthRequest="25">
                                        <Image
                                            toolkit:IconTintColorBehavior.TintColor="White"
                                            HeightRequest="18"
                                            HorizontalOptions="Center"
                                            Source="{Binding Type, Converter={StaticResource converterTypeToImageType}}"
                                            VerticalOptions="Center" />
                                    </pancake:PancakeView>
                                </pancake:PancakeView>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>

                <!--  Seccion Entrenamiento  -->
                <pancake:PancakeView
                    Grid.Row="3"
                    HorizontalOptions="Start"
                    Style="{StaticResource cardSkeletonAbout}"
                    WidthRequest="120">
                    <Label
                        HorizontalOptions="Start"
                        Style="{StaticResource LabelFilterTitle}"
                        Text="Entrenamiento"
                        TextColor="{Binding Pokemon.TypeDefault, Converter={StaticResource converterTypeToColorType}}" />
                </pancake:PancakeView>
                <Grid
                    Grid.Row="4"
                    ColumnSpacing="10"
                    RowSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2.5*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <pancake:PancakeView Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelPokemonType}"
                            Text="EV Yield"
                            TextColor="{StaticResource ColorTextBlack}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>
                    <pancake:PancakeView Grid.Row="1" Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelPokemonType}"
                            Text="Catch Rate"
                            TextColor="{StaticResource ColorTextBlack}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>
                    <pancake:PancakeView Grid.Row="2" Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelPokemonType}"
                            Text="Base Friendship"
                            TextColor="{StaticResource ColorTextBlack}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>
                    <pancake:PancakeView Grid.Row="3" Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelPokemonType}"
                            Text="Base Exp"
                            TextColor="{StaticResource ColorTextBlack}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>
                    <pancake:PancakeView Grid.Row="4" Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelPokemonType}"
                            Text="Growth Rate"
                            TextColor="{StaticResource ColorTextBlack}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>

                    <pancake:PancakeView Grid.Column="1" Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelDescription}"
                            Text="{Binding PokemonSpecies.EvYield}"
                            TextColor="{StaticResource ColorTextGray}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>
                    <pancake:PancakeView
                        Grid.Row="1"
                        Grid.Column="1"
                        Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            TextColor="{StaticResource ColorTextGray}"
                            VerticalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Style="{StaticResource LabelDescription}"
                                          Text="{Binding PokemonSpecies.CaptureRate}" />
                                    <Span Text=" " />
                                    <Span Style="{StaticResource LabelPokemonType}"
                                          Text="{Binding PokemonSpecies.CaptureProbability, StringFormat='({0:P1} with PokéBall, full HP)'}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </pancake:PancakeView>
                    <pancake:PancakeView
                        Grid.Row="2"
                        Grid.Column="1"
                        Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            TextColor="{StaticResource ColorTextGray}"
                            VerticalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Style="{StaticResource LabelDescription}"
                                          Text="{Binding PokemonSpecies.BaseHappiness}" />
                                    <Span Text=" " />
                                    <Span Style="{StaticResource LabelPokemonType}" Text="(normal)" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </pancake:PancakeView>
                    <pancake:PancakeView
                        Grid.Row="3"
                        Grid.Column="1"
                        Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelDescription}"
                            Text="{Binding Pokemon.BaseExperience}"
                            TextColor="{StaticResource ColorTextGray}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>
                    <pancake:PancakeView
                        Grid.Row="4"
                        Grid.Column="1"
                        Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelDescription}"
                            Text="{Binding PokemonSpecies.GrowthRateDescription}"
                            TextColor="{StaticResource ColorTextGray}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>
                </Grid>

                <!--  Seccion Crias  -->
                <pancake:PancakeView
                    Grid.Row="5"
                    HorizontalOptions="Start"
                    Style="{StaticResource cardSkeletonAbout}"
                    WidthRequest="120">
                    <Label
                        HorizontalOptions="Start"
                        Style="{StaticResource LabelFilterTitle}"
                        Text="Crias"
                        TextColor="{Binding Pokemon.TypeDefault, Converter={StaticResource converterTypeToColorType}}" />
                </pancake:PancakeView>
                <Grid
                    Grid.Row="6"
                    ColumnSpacing="10"
                    RowSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2.5*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <pancake:PancakeView Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelPokemonType}"
                            Text="Genero"
                            TextColor="{StaticResource ColorTextBlack}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>
                    <pancake:PancakeView Grid.Row="1" Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelPokemonType}"
                            Text="Grupo de huevo"
                            TextColor="{StaticResource ColorTextBlack}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>
                    <pancake:PancakeView Grid.Row="2" Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelPokemonType}"
                            Text="Ciclos de huevo"
                            TextColor="{StaticResource ColorTextBlack}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>

                    <pancake:PancakeView Grid.Column="1" Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelDescription}"
                            Text="{Binding PokemonSpecies.GenderDescription}"
                            TextColor="{StaticResource ColorTextGray}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>
                    <pancake:PancakeView
                        Grid.Row="1"
                        Grid.Column="1"
                        Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource LabelDescription}"
                            Text="{Binding PokemonSpecies.EggGroupsDescription}"
                            TextColor="{StaticResource ColorTextGray}"
                            VerticalOptions="Center" />
                    </pancake:PancakeView>
                    <pancake:PancakeView
                        Grid.Row="2"
                        Grid.Column="1"
                        Style="{StaticResource cardSkeletonAbout}">
                        <Label
                            HorizontalOptions="Start"
                            TextColor="{StaticResource ColorTextGray}"
                            VerticalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Style="{StaticResource LabelDescription}"
                                          Text="{Binding PokemonSpecies.HatchCounter}" />
                                    <Span Text=" " />
                                    <Span Style="{StaticResource LabelPokemonType}"
                                          Text="{Binding PokemonSpecies.MinEggSteps, StringFormat='({0:N0} -'}" />
                                    <Span Style="{StaticResource LabelPokemonType}"
                                          Text="{Binding PokemonSpecies.MaxEggSteps, StringFormat=' {0:N0} steps)'}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </pancake:PancakeView>
                </Grid>

                <!--  Localizacion  -->
                <pancake:PancakeView
                    Grid.Row="7"
                    HorizontalOptions="Start"
                    Style="{StaticResource cardSkeletonAbout}"
                    WidthRequest="120">
                    <Label
                        HorizontalOptions="Start"
                        Style="{StaticResource LabelFilterTitle}"
                        Text="Localizacion"
                        TextColor="{Binding Pokemon.TypeDefault, Converter={StaticResource converterTypeToColorType}}" />
                </pancake:PancakeView>
                <StackLayout
                    Grid.Row="8"
                    BindableLayout.ItemsSource="{Binding PokemonSpecies.Locations}"
                    HorizontalOptions="FillAndExpand"
                    Orientation="Vertical"
                    Spacing="15">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="2.5*" />
                                </Grid.ColumnDefinitions>
                                <pancake:PancakeView skeleton:Skeleton.IsBusy="{Binding IsBusy}"
                                                     Style="{StaticResource CardSkeleton}">
                                    <Label
                                        HorizontalOptions="Start"
                                        Style="{StaticResource LabelPokemonType}"
                                        Text="{Binding EntryNumber, StringFormat='{0:000}'}"
                                        TextColor="{StaticResource ColorTextBlack}"
                                        VerticalOptions="Center" />
                                </pancake:PancakeView>
                                <pancake:PancakeView
                                    Grid.Column="1"
                                    skeleton:Skeleton.IsBusy="{Binding IsBusy}"
                                    Style="{StaticResource CardSkeleton}">
                                    <Label
                                        HorizontalOptions="Start"
                                        Style="{StaticResource LabelDescription}"
                                        Text="{Binding Description}"
                                        TextColor="{StaticResource ColorTextGray}"
                                        VerticalOptions="Center" />
                                </pancake:PancakeView>
                            </Grid>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
            </Grid>
        </StackLayout>
    </ContentView.Content>

</ContentView>